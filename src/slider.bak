#lang racket

(require picturing-programs)

(define-struct posn (x y))

(define SLIDER-BAR
  (rectangle 100 10 "solid" "green"))

(define SLIDER-HEAD
  (flip-vertical (triangle 5 "solid" "red")))

(define (render model)
  (place-image
   SLIDER-HEAD
   (posn-x model)
   (posn-y model)
   SLIDER-BAR)
  )

(define (mousey model x y event)
  (cond [(equal? event "drag")
         (struct-copy
          posn model
          [x x]
          [y y])]
        [else model]))

(big-bang (posn 0 0)
          (to-draw render)
          (on-mouse mousey))